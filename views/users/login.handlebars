<h1>Sign In</h1>

{{#if errorMessage}}
    <p id="error">{{errorMessage}}</p>
{{/if}}


<form id="signin-form" class="signin-form" method="POST" action="/users/login">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username"/>

	</br>

        <label for="password">Password:</label>
        <input type="password" id="password" name="password"/>

	</br>

        <button type="submit" id="submit_button" name="submit_button">Sign In</button>
</form>

<a href="/users/register">Click here to signup!</a>
