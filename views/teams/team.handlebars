<div class="team-container">
  <h1 id="teams-title" class="teams-title">{{team.title}}</h1>

  <h3 id="teams-desiredRankHeader" class="teams-desiredRankHeader">Desired Rank</h3>
  <ul>
    {{#each team.desiredRank}}
    <li class="teams-desiredRankItem">{{this}}</li>
  {{/each}}
</ul>
{{#unless team.desiredRank.length}}
<p>No Desired Rank</p>
{{/unless}}

  <h3 id="teams-desiredRole" class="teams-desiredRole">Desired Role</h3>
  <ul>
    {{#each team.desiredRole}}
    <li class="teams-desiredRoleItem">{{this}}</li>
  {{/each}}
</ul>
{{#unless team.desiredRole.length}}
<p>No Desired Role</p>
{{/unless}}


<h3 id="teams-region" class="teams-region">Region</h3>
<p id="teams-regionItem">{{team.region}}</p>
{{#unless team.region}}
<p>No Desired Region</p>
{{/unless}}


  <h3 id="teams-owner" class="teams-owner">Owner</h3>
  <a href="/users/profile/{{owner.id}}" id="teams-ownerItem">{{owner.username}}</a>

  <h3 id="teams-members" class="teams-members">members</h3>
  <ul id="teams-memberslist" class="team-memberslist">
    {{#each members}}
    <li class="teams-membersitem"><a href="/users/profile/{{this.id}}">{{this.username}}</a></li>
    {{/each}}
  </ul>

  <p id="teams-description">Description: {{team.description}}</p>

  {{#if ismember}}
  <h3 id="teams-chatheader" class="teams-chatheader">chat</h3>
  <ul id="teams-chatlist" class="teams-chatlist">
    {{#each messages}}
    <li class="teams-chatitem">{{this}}</li>
    {{/each}}
  </ul>

  <form action="/teams/{{team._id}}/chat" method="post" id="teams-chatform">
    <textarea name="teamsmessage" id="teamsmessage"></textarea>
    <button type="submit">send</button>
  </form>
  {{/if}}

  <p id="error"></p>

  {{#if joinable}}
  <a href="/teams/{{team._id}}/join">Request to Join</a>
  {{/if}}
  {{#if requested}}
  <p>You have already requested to join!</p>
  {{/if}}

  {{#if leavable}}
  <a href="/teams/{{team._id}}/leave">Leave Team</a>
  {{/if}}

  {{#if isowner}}
  <a href="/teams/{{team._id}}/admin">Admin Page</a>
  {{/if}}
</div>

<script type="module" src="/public/js/teams/teammessage.js"></script>
