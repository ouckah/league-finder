<p id="error">{{errorMessage}}</p>
<p id="success" hidden></p>

<form id="editpost-form" name="editpost-form" action="/posts/{{post._id}}/edit" method="POST">
  <h2>Edit your Post</h2>
  <div class="form-group">
    <input type="hidden" name="_method" value="PATCH">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="{{post.title}}" required />

    <label for="content">Content:</label>
    <textarea id="content" name="content" rows="5" required>{{post.content}}</textarea>


    <label for="image">Image URL (optional):</label>
    <input type="text" id="image" name="image" value="{{post.image}}" />


    <label for="tags">Tags (comma-separated):</label>
    <input type="text" id="tags" name="tags" value="{{post.tags}}" />



    <button type="submit">Update Post</button>
  </div>
</form>

<script type="module" src="/public/js/posts/editpost.js"></script>