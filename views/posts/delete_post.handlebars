<h2>Delete Post</h2>

<p id = "error">{{errorMessage}}</p>
<p id = "success" hidden></p>

<form action="/posts/{{postID}}/delete" id="deletePostForm" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <label for="confirm">Type 'confirm' if you are sure you want to delete this post</label>
    <input name= "confirm" id="confirm" type="text"/>
    <button type="submit">Delete</button>
</form>